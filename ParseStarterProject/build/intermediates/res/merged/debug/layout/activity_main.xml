<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/main_layout">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:id="@+id/logo_image" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/et_pass"
        android:hint="Password"
        android:layout_below="@+id/et_User"
        android:layout_alignLeft="@+id/et_User"
        android:layout_alignStart="@+id/et_User" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pass"
        android:layout_alignRight="@+id/logo_image"
        android:layout_alignEnd="@+id/logo_image"
        android:layout_marginTop="43dp"
        android:id="@+id/log_btn"
        android:onClick="SignUp" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/changemode_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="63dp"
        android:id="@+id/et_User"
        android:hint="UserName"
        android:layout_below="@+id/logo_image"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
